FROM centos:centos7

WORKDIR /home/coding

MAINTAINER smiecj smiecj@github.com

ARG ROOT_PWD=root!centos123

# RUN
RUN yum -y install wget zip unzip && cd /tmp \
    && rm -f main.zip && rm -rf docker-centos-main && curl -LO https://github.com/smiecj/docker-centos/archive/refs/heads/main.zip && unzip main.zip \
    && cd docker-centos-main/scripts && sh init-system.sh ${ROOT_PWD} && sh init-mysql.sh

ENTRYPOINT ["service mysqld restart"]

EXPOSE 22 3306